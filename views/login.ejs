<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login | GuidanceX</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

    *{
      box-sizing:border-box;
      margin:0;
      padding:0;
    }

    body,html{
      height:100%;
      width:100%;
      font-family:'Poppins',sans-serif;
      background:#c3d9ff;
      display:flex;
      align-items:center;
      justify-content:center;
    }

    /* -------- FULL SCREEN FIX -------- */
    .page-wrap{
      width:100%;
      height:100vh;         /* FULL SCREEN NOW */
      max-width:1300px;
      background:#c3d9ff;
      border-radius:32px;
      overflow:hidden;

      display:flex;         /* FLEX INSTEAD OF GRID */
      flex-direction:row;
      position:relative;

      box-shadow:0 20px 60px rgba(0,0,0,.2);
    }

    /* Your Original Circles — UNTOUCHED */
    .bg-circle{
      position:absolute;
      border-radius:50%;
      border:4px solid rgba(255,255,255,.55);
    }
    .bg-circle.small{
      width:38px;height:38px;
      border-width:3px;
    }
    .bg-circle.big{
      width:68px;height:68px;
    }
    .bg-circle.fill{
      background:rgba(255,255,255,.4);
      border:none;
    }
    .c1{top:26px;left:60px;}
    .c2{top:80px;right:120px;}
    .c3{bottom:60px;left:140px;}
    .c4{bottom:24px;right:60px;}
    .c5{top:220px;left:290px;}
    .c6{top:130px;right:260px;}

    /* LEFT LOGIN SIDE — EXACT SAME */
    .login-side{
      width:50%;
      display:flex;
      align-items:center;
      justify-content:center;
      padding-left:40px;
      position:relative;
      z-index:2;
    }

    .login-card{
      width:340px;
      background:#e4efff;
      border-radius:28px;
      padding:32px 30px 28px;
      box-shadow:0 16px 28px rgba(23,74,150,.25);
    }

    .login-card h2{
      font-size:26px;
      font-weight:700;
      color:#264077;
      margin-bottom:26px;
    }

    form{
      display:flex;
      flex-direction:column;
      gap:14px;
    }

    .field{
      display:flex;
      flex-direction:column;
      gap:6px;
      font-size:13px;
      color:#5b6b8f;
    }

    .field input{
      height:44px;
      border-radius:10px;
      border:none;
      padding:0 14px;
      font-size:13px;
      background:#f5f8ff;
      box-shadow:inset 0 0 0 1px #d1def5;
      color:#1f2937;
    }

    .field input:focus{
      outline:none;
      box-shadow:0 0 0 2px #3366ff33;
      background:#ffffff;
    }

    .login-btn{
      margin-top:10px;
      height:46px;
      border:none;
      border-radius:10px;
      background:linear-gradient(90deg,#1d52ff,#0050c8);
      color:#ffffff;
      font-weight:600;
      font-size:15px;
      cursor:pointer;
      letter-spacing:.06em;
      text-transform:uppercase;
      box-shadow:0 10px 20px rgba(0,76,184,.45);
    }

    .divider-text{
      margin:18px 0 10px;
      font-size:11px;
      color:#7a8bae;
      text-align:center;
    }

    .social-row{
      display:flex;
      gap:12px;
      margin-bottom:20px;
    }

    .social-btn{
      flex:1;
      display:flex;
      align-items:center;
      justify-content:center;
      gap:6px;
      height:36px;
      border-radius:20px;
      border:none;
      font-size:11px;
      cursor:pointer;
      background:#ffffff;
      color:#4b5563;
      box-shadow:0 4px 10px rgba(15,23,42,.1);
    }

    /* RIGHT ART SIDE — EXACT SAME DESIGN */
    .art-side{
      width:50%;
      position:relative;
      display:flex;
      align-items:center;
      justify-content:center;
      overflow:hidden;
    }

    .big-ring{
      position:absolute;
      width:520px;
      height:520px;
      border-radius:50%;
      background:#4b7cff;
      right:-80px;
      top:50%;
      transform:translateY(-50%);
    }
    .big-ring::before{
      content:"";
      position:absolute;
      inset:40px;
      border-radius:50%;
      background:#1c51e6;
    }

    .plant{
      position:absolute;
      right:70px;
      top:50%;
      transform:translateY(-50%);
      width:260px;
      height:220px;
    }

    /* MOBILE RESPONSIVE */
    @media (max-width:900px){
      .page-wrap{
        flex-direction:column;
        height:auto;
        min-height:100vh;
        max-width:420px;
        padding:40px 0;
      }

      .art-side{
        display:none;
      }

      .login-side{
        width:100%;
        padding:0;
        justify-content:center;
      }
    }

  </style>
</head>

<body>
  <div class="page-wrap">

    <!-- original circles -->
    <span class="bg-circle small c1"></span>
    <span class="bg-circle big c2"></span>
    <span class="bg-circle big fill c3"></span>
    <span class="bg-circle small c4"></span>
    <span class="bg-circle small fill c5"></span>
    <span class="bg-circle small c6"></span>

    <!-- LOGIN SIDE (unchanged) -->
    <div class="login-side">
      <div class="login-card">
        <h2>Login Now</h2>

        <% if(error) { %>
          <div class="error-message"><%= error %></div>
        <% } %>

        <form action="/login" method="POST" novalidate>

          <div class="field">
            <label>Email or Username</label>
            <input type="text" name="username" placeholder="Email or Username" required />
          </div>

          <div class="field">
            <label>Password</label>
            <input type="password" name="password" placeholder="Password" required />
          </div>

          <button class="login-btn">LOGIN</button>

          <div class="divider-text">Or login with</div>

          <div class="social-row">
            <button type="button" class="social-btn">
              <span class="social-icon"></span> Facebook
            </button>

            <button type="button" class="social-btn google">
              <span class="social-icon"></span> Google
            </button>
          </div>
        </form>

        <p class="footer-text">Not a member? <a href="#">Sign up now</a></p>
      </div>
    </div>

    <!-- RIGHT ILLUSTRATION (unchanged) -->
    <div class="art-side">
      <div class="big-ring"></div>

      <div class="plant">
        <div class="leaf l1"></div>
        <div class="leaf l2"></div>
        <div class="leaf l3"></div>

        <div class="stem s1"></div>
        <div class="stem s2"></div>
        <div class="stem s3"></div>

        <div class="flower f1">✿</div>
        <div class="flower f2">✿</div>
        <div class="flower f3">✿</div>

        <div class="base-pill base1"></div>
        <div class="base-pill base2"></div>
        <div class="base-pill base3"></div>
      </div>

    </div>

  </div>
</body>
</html>
