<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login | GuidanceX</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="style.css">
</head>
<style>

@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body, html {
  width: 100%;
  height: 100%;
  background: #dce9ff;
  font-family: "Poppins";
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-wrap {
  width: 100%;
  height: 100vh;
  max-width: 1300px;
  border-radius: 28px;
  background: #dce9ff;
  position: relative;
  display: flex;
  overflow: hidden;
}

/* FLOATING CIRCLES */
.circle {
  position: absolute;
  width: 35px;
  height: 35px;
  border: 3px solid rgba(255,255,255,0.7);
  border-radius: 50%;
}

.c1 { top: 40px; left: 50px; }
.c2 { top: 120px; right: 130px; }
.c3 { bottom: 70px; left: 150px; }
.c4 { top: 240px; left: 310px; }
.c5 { top: 180px; right: 260px; }
.c6 { bottom: 40px; right: 90px; }

/* LEFT SECTION */
.left-box {
  width: 45%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-card {
  width: 80%;
  background: #e9f1ff;
  padding: 35px;
  border-radius: 22px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.1);
}

.login-card h2 {
  font-size: 28px;
  margin-bottom: 24px;
  text-align: center;
  color: #1a2e66;
}

input {
  width: 100%;
  height: 45px;
  padding: 0 14px;
  background: #f3f6ff;
  border: 1px solid #c9d8ff;
  border-radius: 12px;
  margin-bottom: 14px;
  font-size: 14px;
}

input:focus {
  outline: none;
  border-color: #3266ff;
  background: #fff;
}

.login-btn {
  width: 100%;
  height: 46px;
  border: none;
  border-radius: 12px;
  background: #0c48db;
  color: white;
  font-size: 16px;
  font-weight: 600;
  margin-top: 6px;
  cursor: pointer;
}

.divider {
  text-align: center;
  font-size: 13px;
  color: #667;
  margin: 14px 0;
}

.social-row {
  display: flex;
  gap: 12px;
}

.social {
  flex: 1;
  background: #fff;
  border: none;
  height: 40px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  cursor: pointer;
  font-size: 14px;
}

.social img {
  width: 17px;
}

.footer {
  margin-top: 15px;
  font-size: 13px;
  text-align: center;
  color: #556;
}

.footer a {
  color: #1e62ff;
  text-decoration: none;
  font-weight: 600;
}

/* RIGHT BLUE DESIGN */
.right-box {
  width: 55%;
  position: relative;
  background: #dce9ff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.big-bg {
  position: absolute;
  width: 850px;
  height: 850px;
  border-radius: 50%;
  right: -250px;
  background: radial-gradient(circle, #4d7bff, #0037c2);
}

.art {
  width: 340px;
  position: relative;
  z-index: 2;
}

/* MOBILE */
@media (max-width: 900px) {

  .page-wrap {
    flex-direction: column;
    height: auto;
    min-height: 100vh;
    border-radius: 0;
  }

  .right-box {
    display: none;
  }

  .left-box {
    width: 100%;
    padding: 20px;
  }

  .login-card {
    width: 100%;
  }
}



</style>

<body>
  <div class="page-wrap">

    <!-- FLOATING DECOR CIRCLES -->
    <span class="circle c1"></span>
    <span class="circle c2"></span>
    <span class="circle c3"></span>
    <span class="circle c4"></span>
    <span class="circle c5"></span>
    <span class="circle c6"></span>

    <!-- LEFT LOGIN SECTION -->
    <div class="left-box">
      <div class="login-card">
        <h2>Login Now</h2>

        <% if(error) { %>
          <div class="error"><%= error %></div>
        <% } %>

        <form action="/login" method="POST" autocomplete="on">

          <input type="text" name="username" placeholder="Email or Username" required>

          <input type="password" name="password" placeholder="Password" required>

          <button type="submit" class="login-btn">LOGIN</button>

          <p class="divider">Or login with</p>

          <div class="social-row">
            <button type="button" class="social fb">
              <img src="https://cdn-icons-png.flaticon.com/512/733/733547.png">
              Facebook
            </button>
            <button type="button" class="social google">
              <img src="https://cdn-icons-png.flaticon.com/512/300/300221.png">
              Google
            </button>
          </div>
        </form>

        <p class="footer">Not a member?
          <a href="#">Sign up now</a>
        </p>

      </div>
    </div>

    <!-- RIGHT BLUE SECTION -->
    <div class="right-box">
      <div class="big-bg"></div>

      <!-- Plant Image -->
      <img class="art" src="https://i.ibb.co/HHc7yHk/3d-plant.png">
    </div>

  </div>
</body>
</html>
