<!-- Redesigned GuidanceX Courses Page Matching the Reference UI Style -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Courses | GuidanceX</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background: #5aa0ff;
      overflow-x: hidden;
    }

    /* NAVBAR */
    nav {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 18px 50px;
      background: rgba(255,255,255,0.2);
      backdrop-filter: blur(15px);
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1000;
    }

    nav a {
      text-decoration: none;
      color: white;
      font-weight: 500;
      margin: 0 15px;
    }

    .logo {
      font-size: 1.6rem;
      font-weight: 700;
      color: #fff;
    }

    /* HERO SECTION */
    .hero {
      margin-top: 90px;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .hero-box {
      background: #000;
      width: 80%;
      border-radius: 22px;
      padding: 60px 40px;
      color: #fff;
      text-align: center;
    }

    .hero-title {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 15px;
    }

    .hero-sub {
      color: #ff73b8;
      font-size: 1.2rem;
      margin-bottom: 40px;
    }

    /* COURSES GRID */
    .courses-section {
      width: 100%;
      display: flex;
      justify-content: center;
      margin-top: 60px;
    }

    .grid {
      width: 80%;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 35px;
    }

    .course-card {
      background: linear-gradient(140deg, #6a2ebf, #a95cff);
      border-radius: 22px;
      padding: 40px 25px;
      text-align: center;
      box-shadow: 0 10px 20px #00000022;
      cursor: pointer;
      transition: transform 0.3s;
      color: #fff;
    }

    .course-card:hover {
      transform: translateY(-10px);
    }

    .course-icon {
      font-size: 4rem;
      margin-bottom: 15px;
    }

    .course-title {
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 20px;
    }

    .btn {
      background: #fff;
      color: #6a2ebf;
      padding: 12px 20px;
      border-radius: 12px;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn:hover {
      background: #ffe3ff;
    }
  </style>
</head>

<body>
  <nav>
    <div class="logo">GuidanceX</div>
    <div>
      <a href="/">Home</a>
      <a href="/topics">Courses</a>
      <a href="/pricing">Pricing</a>
      <a href="/about">About</a>
      <a href="/help">Help</a>
    </div>
  </nav>

  <section class="hero">
    <div class="hero-box">
      <div class="hero-title">Explore Our Courses</div>
      <div class="hero-sub">Choose your track and start learning today!</div>
    </div>
  </section>

  <section class="courses-section">
    <div class="grid">
      <% const iconMap = {
          business: "bi-building",
          trading: "bi-currency-exchange",
          design: "bi-brush",
          freelancer: "bi-person-workspace",
          personalgrowth: "bi-magic"
      }; %>

      <% topics.forEach(topic => { %>
        <div class="course-card" onclick="window.location='/topic/<%= topic.name %>'">
          <i class="course-icon bi <%= iconMap[topic.name.toLowerCase().replace(/\s+/g,'')] || 'bi-code-slash' %>"></i>
          <div class="course-title"><%= topic.name %></div>
          <button class="btn">View Tracks</button>
        </div>
      <% }) %>
    </div>
  </section>

</body>
</html>
