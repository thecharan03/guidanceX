    .exploit-title{font-family:'Orbitron',Arial,sans-serif;text-align:center;font-size:1.24rem;color:#c7bafd;letter-spacing:0.13em;font-weight:800;margin:38px 0 18px 0;}
    .exploit-row {margin:0 auto 35px auto;max-width:960px;display:flex;gap:38px;justify-content:center;}
