<!DOCTYPE html>
<html lang="en">
<head>
  <title>Sale & Courses | GuidanceX</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet"/>
  <style>
    body {
      margin: 0;
      font-family: 'Poppins', 'Montserrat', Arial, sans-serif;
      background: #5aa0ff;
      min-height: 100vh;
    }
    .container-main {
      max-width: 1100px;
      margin: 52px auto 0 auto;
      padding: 0;
      background: none;
      position: relative;
    }
    .page-mockup {
      background: none;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .laptop-frame {
      background: transparent;
      padding: 0;
      margin: 0;
      position: relative;
      z-index: 2;
    }
    .laptop-screen {
      background: #18131b;
      border-radius: 50px 50px 24px 24px;
      box-shadow: 0 12px 64px #26113f66;
      width: 900px;
      max-width: 92vw;
      margin: 0 auto;
      padding: 0;
      position: relative;
      top: 0;
      z-index: 3;
      border: 6px solid #4442b8;
      overflow: hidden;
    }
    .sale-header {
      padding: 42px 0 28px 0;
      text-align: center;
      font-size: 2.8rem;
      color: #fff;
      font-weight: 900;
      letter-spacing: 0.06em;
    }
    .sale-badge {
      position: absolute;
      top: 24px;
      left: 50%;
      transform: translateX(-50%);
      background: #9587ec;
      color: #fff;
      font-weight: 700;
      border-radius: 12px;
      padding: 8px 32px;
      font-size: 1.18rem;
      box-shadow: 0 2px 12px #55448450;
      z-index: 50;
    }
    .sale-row {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: flex-end;
      padding: 0 44px 0 44px;
      gap: 30px;
      min-height: 210px;
    }
    .sale-img-feature {
      width: 150px;
      margin-bottom: -22px;
      border-radius: 22px;
      box-shadow: 0 7px 44px #17141e50;
      background: #25205a;
      border: 4px solid #9587ec22;
    }
    .sale-img-feature.right {
      background: #191e24;
      border-color: #ffb2b2aa;
    }
    .sale-details {
      flex: 1 1 auto;
      text-align: center;
      padding-bottom: 34px;
      min-width: 200px;
      color: #fff;
    }
    .sale-details .offer {
      font-size: 1.1rem;
      color: #ff73b8;
      font-weight: 600;
    }
    .sale-details .timer-title {
      font-size: 1.35rem;
      color: #fff;
      font-weight: 700;
      margin-top: 8px;
    }
    .countdown-row {
      display: flex;
      gap: 33px;
      justify-content: center;
      margin-top: 23px;
      font-size: 1.65rem;
      font-weight: 800;
    }
    .timer-box {
      background: #2e244c;
      border-radius: 13px;
      padding: 10px 20px;
      color: #fff;
      min-width: 53px;
      box-shadow: 0 2px 8px #651dbe66;
    }
    .timer-label-row {
      display: flex;
      gap: 33px;
      justify-content: center;
      font-size: 0.98rem;
      color: #a2b6f7;
      margin: 5px 0 16px 0;
      font-weight: 700;
    }
    .section-title {
      text-align: center;
      font-size: 1.52rem;
      font-weight: 700;
      color: #29235b;
      margin: 56px 0 16px 0;
      letter-spacing: 0.03em;
    }
    /* Courses grid (below mockup) */
    .grid {
      width: 95%;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
      gap: 33px;
    }
    .course-card {
      background: linear-gradient(130deg, #2e244c 75%, #ffafe3 100%);
      border-radius: 19px;
      padding: 27px 22px;
      text-align: center;
      color: #fff;
      box-shadow: 0 6px 14px #4a12cc33;
      margin-bottom:18px;
      min-height: 195px;
      position: relative;
    }
    .course-card:hover {
      box-shadow: 0 18px 30px #4a12cc44;
      transform: scale(1.04);
      z-index:2;
    }
    .course-icon { font-size:2.9rem; margin-bottom:8px;}
    .course-title { font-size:1.13rem; font-weight:800;}
    .course-desc {
      font-size:0.96rem;
      color:#ffe3ff;
      margin:10px 0 14px 0;
      min-height:38px;
    }
    .btn {
      background: #fff; color: #5e3ab3;
      padding: 8px 15px;
      border-radius: 11px;
      font-weight: 700;
      border: none;
      cursor: pointer;
      font-size: 1.01rem;
      transition: 0.3s;
      box-shadow: 0 2px 9px #c7a8ef50;
    }
    .btn:hover { background: #ffe3ff; color:#2a281f;}
    /* Gallery grid */
    .gallery-section {
      margin: 60px 0 34px 0;
      width: 93vw;
      max-width: 980px;
      margin-left:auto;
      margin-right:auto;
      background: #fff;
      border-radius: 16px;
      box-shadow:0 2px 8px #18142522;
      padding:26px 18px 18px 18px;
    }
    .gallery-title { font-size:1.2rem; font-weight:800; color:#3e3192; margin-bottom:25px;}
    .gallery-grid { display:grid; grid-template-columns:repeat(auto-fit,minmax(170px,1fr)); gap:22px;}
    .gallery-img { width:100%; border-radius:8px; box-shadow:0 4px 18px #979fd522; display:block;}
    @media (max-width:1050px) { .laptop-screen{width:98vw;} .container-main{max-width:98vw;} }
    @media (max-width:900px) { .laptop-screen{border-radius:30px;} .sale-header{font-size:2.2rem;} }
    @media (max-width:650px) {
      .laptop-screen{width:99vw;border-radius:16px;}
      .sale-row{padding:0 12px;}
      .container-main{margin:18px auto 0 auto;}
    }
  </style>
</head>
<body>
  <div class="container-main">
    <!-- Navigation -->
    <nav>
      <div class="logo">GuidanceX</div>
      <div>
        <a href="/">Home</a>
        <a href="/topics">Courses</a>
        <a href="/pricing">Pricing</a>
        <a href="/about">About</a>
        <a href="/help">Help</a>
      </div>
    </nav>

    <!-- Laptop Mockup Area -->
    <div class="page-mockup" style="margin-top:64px;">
      <div class="laptop-frame">
        <div class="laptop-screen">
          <div class="sale-badge">GuidanceX</div>
          <div class="sale-header">NEW YEAR SALE!</div>
          <div class="sale-row">
            <img src="https://cdn-icons-png.flaticon.com/512/6134/6134065.png"
              class="sale-img-feature" style="background:#25205a;" alt="Coding/Camera"/>
            <div class="sale-details">
              <div class="offer">Offer ends in</div>
              <div class="timer-title">Limited Time Only!</div>
              <div class="countdown-row" id="countdown">
                <span class="timer-box" id="days">00</span>
                <span class="timer-box" id="hours">00</span>
                <span class="timer-box" id="minutes">00</span>
                <span class="timer-box" id="seconds">00</span>
              </div>
              <div class="timer-label-row">
                <span>Days</span><span>Hours</span><span>Minutes</span><span>Seconds</span>
              </div>
            </div>
            <img src="https://cdn-icons-png.flaticon.com/512/3449/3449772.png"
              class="sale-img-feature right" alt="Marketing/Drone"/>
          </div>
        </div>
      </div>
    </div>
    <!-- Courses Grid -->
    <div class="section-title">Choose Your Track and Start Learning</div>
    <div class="grid">
      <div class="course-card" onclick="window.location='/topic/Coding Fundamentals'">
        <i class="course-icon bi bi-code-slash"></i>
        <div class="course-title">Coding Fundamentals</div>
        <div class="course-desc">Clear C programming, algorithms, and hands-on projects to jumpstart coding mastery.</div>
        <button class="btn">View Tracks</button>
      </div>
      <div class="course-card" onclick="window.location='/topic/Design & Animation'">
        <i class="course-icon bi bi-brush"></i>
        <div class="course-title">Design & Animation</div>
        <div class="course-desc">Learn professional video editing, graphic design, and logo creation from basics to pro.</div>
        <button class="btn">View Tracks</button>
      </div>
      <div class="course-card" onclick="window.location='/topic/Marketing'">
        <i class="course-icon bi bi-megaphone"></i>
        <div class="course-title">Marketing</div>
        <div class="course-desc">Master digital marketing, brand strategy, and growth hacks for career and business.</div>
        <button class="btn">View Tracks</button>
      </div>
      <div class="course-card" onclick="window.location='/topic/Web Development'">
        <i class="course-icon bi bi-window-stack"></i>
        <div class="course-title">Web Development</div>
        <div class="course-desc">Learn HTML, CSS, JavaScript, and build modern, responsive websites and apps.</div>
        <button class="btn">View Tracks</button>
      </div>
      <div class="course-card" onclick="window.location='/topic/Personal Growth'">
        <i class="course-icon bi bi-magic"></i>
        <div class="course-title">Personal Growth</div>
        <div class="course-desc">Unlock productivity, study strategies, and self-development for lifelong success.</div>
        <button class="btn">View Tracks</button>
      </div>
    </div>
    <!-- Gallery Section -->
    <div class="gallery-section">
      <div class="gallery-title">Gallery</div>
      <div class="gallery-grid">
        <img src="https://images.unsplash.com/photo-1519125323398-675f0ddb6308" alt="Gallery" class="gallery-img"/>
        <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb" alt="Gallery" class="gallery-img"/>
        <img src="https://images.unsplash.com/photo-1465101046530-73398c7f28ca" alt="Gallery" class="gallery-img"/>
        <img src="https://images.unsplash.com/photo-1519985176271-adb1088fa94c" alt="Gallery" class="gallery-img"/>
        <img src="https://images.unsplash.com/photo-1465101178521-cce3c7f1b103" alt="Gallery" class="gallery-img"/>
      </div>
    </div>
  </div>

  <script>
    // Sale Countdown JS - choose any sale end date you want!
    const endDate = new Date('2025-12-31T23:59:59');
    function updateCountdown(){
      const now = new Date();
      const diff = endDate - now;
      document.getElementById('days').textContent = String(Math.floor(diff/864e5)).padStart(2,'0');
      document.getElementById('hours').textContent = String(Math.floor(diff/36e5)%24).padStart(2,'0');
      document.getElementById('minutes').textContent = String(Math.floor(diff/6e4)%60).padStart(2,'0');
      document.getElementById('seconds').textContent = String(Math.floor(diff/1e3)%60).padStart(2,'0');
    }
    setInterval(updateCountdown,1000); updateCountdown();
  </script>
</body>
</html>
