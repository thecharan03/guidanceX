<!DOCTYPE html>
<html lang="en">
<head>
  <title>New Year Sale | GuidanceX</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet"/>
  <style>
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background: #5aa0ff;
      min-height: 100vh;
      overflow-x: hidden;
    }
    nav {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 18px 50px;
      background: rgba(255,255,255,0.13);
      backdrop-filter: blur(18px);
      font-size: 1.03rem;
      position: fixed; top: 0; left: 0; z-index: 1000;
    }
    nav .logo {
      font-size: 1.6rem; font-weight: 700; color: #fff;
      letter-spacing: 0.09em;
    }
    nav a {
      text-decoration: none;
      color: white;
      font-weight: 500;
      margin: 0 15px;
      transition: color 0.2s;
    }
    nav a:hover {
      color: #ff73b8;
    }
    .hero {
      margin-top: 100px;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 520px;
      background: none;
      position: relative;
    }
    .hero-content {
      background: #1a181c;
      border-radius: 25px;
      box-shadow: 0 10px 40px #0005;
      width: 790px;
      max-width: 85vw;
      padding: 72px 58px 32px 58px;
      text-align: center;
      color: #fff;
      position: relative;
    }
    .hero-content .logo-badge {
      background: #c7a8ef;
      border-radius: 25px 25px 0 0;
      color: #fff;
      font-weight: 600;
      letter-spacing: 0.13em;
      font-size: 1.07rem;
      margin-bottom: 38px;
      position: absolute; left: 50%; top: -38px; transform: translateX(-50%);
      width: 160px;
      padding: 13px 0;
      text-align: center;
      box-shadow: 0 5px 24px #ab91e650;
    }
    .hero-title-main {
      font-size: 2.6rem;
      font-weight: 800;
      margin-bottom: 20px;
      letter-spacing: 0.04em;
      color: #fff;
    }
    .hero-offer {
      font-size: 1.16rem;
      color: #ff73b8;
      font-weight: 700;
      letter-spacing: 0.04em;
      margin-bottom: 4px;
    }
    .countdown-timer {
      margin: 30px 0 23px 0;
      display: flex; justify-content: center; gap: 40px;
      font-size: 1.7rem; font-weight: 700; color:#fff;
    }
    .countdown-timer .num {
      color: #fff; background:#2a2934; border-radius:12px; padding:9px 20px; min-width:62px;
      box-shadow: 0 2px 10px #ab91e633;
      margin-bottom: 8px;
    }
    .countdown-labels {
      display: flex; justify-content: center; gap: 40px; font-size: 1rem; color:#c7a8ef;
    }
    .side-img {
      position: absolute;
      top: 36px;
      width: 120px;
      z-index: 1;
    }
    .side-img.left { left: 22px;}
    .side-img.right { right: 22px;}

    .section-title {
      text-align: center;
      font-size: 1.35rem;
      font-weight: 700;
      color: #181425;
      margin: 60px 0 18px 0;
    }
    .courses-section {
      width: 100%; display: flex; justify-content: center; margin-top: 10px;
    }
    .grid {
      width: 90%; display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 35px;
    }
    .course-card {
      background: linear-gradient(120deg, #6a2ebf 55%, #ffafe3 100%);
      border-radius: 22px;
      padding: 35px 25px;
      text-align: center;
      box-shadow: 0 6px 20px #2a2a2a20;
      color: #fff; cursor: pointer; transition: transform 0.3s;
    }
    .course-card:hover {
      transform: translateY(-8px) scale(1.03);
      box-shadow: 0 18px 45px #6a2ebf14;
    }
    .course-icon { font-size: 4rem; margin-bottom: 16px;}
    .course-title { font-size:1.23rem; font-weight:700; margin-bottom:10px;}
    .btn {
      background: #fff; color: #6a2ebf;
      padding: 10px 18px; border-radius: 12px;
      font-weight: 600; border: none; cursor: pointer;
    }
    .btn:hover { background: #ffe3ff; color:#2a281f;}
    /* GALLERY */
    .gallery-section {
      margin: 70px 0 48px 0;
      width: 90vw; max-width: 1200px; margin-left:auto; margin-right:auto;
      background: #fff; border-radius: 18px; box-shadow:0 0 12px #1a181c22; padding:32px 18px;
    }
    .gallery-title { font-size:1.3rem; font-weight:800; color:#3e3192; margin-bottom:25px;}
    .gallery-grid { display:grid; grid-template-columns:repeat(auto-fit, minmax(200px,1fr)); gap:28px;}
    .gallery-img { width:100%; border-radius:11px; box-shadow:0 4px 18px #979fd522; display:block;}
    @media (max-width:1200px) { .gallery-section{padding:24px 6vw;} .grid{width:100%;}}
    @media (max-width:900px) { nav{padding:13px 12px;} .hero-content{padding:32px 8vw;} }
    @media (max-width:700px) { .hero-content{width:98vw;min-width:inherit;padding:22px 0;} }
  </style>
</head>
<body>
  <nav>
    <div class="logo">GuidanceX</div>
    <div>
      <a href="/">Home</a>
      <a href="/topics">Courses</a>
      <a href="/pricing">Pricing</a>
      <a href="/about">About</a>
      <a href="/help">Help</a>
    </div>
  </nav>

  <section class="hero">
    <div class="hero-content">
      <div class="logo-badge">LO:GO</div>
      <img src="/images/sale_left.png" class="side-img left" alt="product" />
      <img src="/images/sale_right.png" class="side-img right" alt="product" />
      <div class="hero-title-main">NEW YEAR SALE!</div>
      <div class="hero-offer">offer <span style="font-weight:800;">ends in</span></div>
      <div class="countdown-timer" id="countdown">
        <span class="num" id="days">00</span>
        <span class="num" id="hours">00</span>
        <span class="num" id="minutes">00</span>
        <span class="num" id="seconds">00</span>
      </div>
      <div class="countdown-labels">
        <span>Days</span>
        <span>Hours</span>
        <span>Minutes</span>
        <span>Seconds</span>
      </div>
    </div>
  </section>

  <div class="section-title">Check our <span style="color:#6a2ebf">special products</span></div>
  <section class="courses-section">
    <div class="grid">
      <% const iconMap = {
        business: "bi-building",
        trading: "bi-currency-exchange",
        design: "bi-brush",
        freelancer: "bi-person-workspace",
        personalgrowth: "bi-magic"
      }; %>
      <% topics.forEach(topic => { %>
        <div class="course-card" onclick="window.location='/topic/<%= topic.name %>'">
          <i class="course-icon bi <%= iconMap[topic.name.toLowerCase().replace(/\s+/g,'')] || 'bi-code-slash' %>"></i>
          <div class="course-title"><%= topic.name %></div>
          <button class="btn">View Tracks</button>
        </div>
      <% }) %>
    </div>
  </section>

  <div class="gallery-section">
    <div class="gallery-title">Gallery</div>
    <div class="gallery-grid">
      <% gallery.forEach(img => { %>
        <img src="<%= img %>" alt="gallery" class="gallery-img" />
      <% }) %>
    </div>
  </div>

  <script>
    // Countdown timer JS (Set your end date!)
    const endDate = new Date('2026-01-05T23:59:59'); // Set sale end date here
    function updateCountdown(){
      const now = new Date();
      const diff = endDate - now;
      document.getElementById('days').textContent = String(Math.floor(diff/864e5)).padStart(2,'0');
      document.getElementById('hours').textContent = String(Math.floor(diff/36e5)%24).padStart(2,'0');
      document.getElementById('minutes').textContent = String(Math.floor(diff/6e4)%60).padStart(2,'0');
      document.getElementById('seconds').textContent = String(Math.floor(diff/1e3)%60).padStart(2,'0');
    }
    setInterval(updateCountdown,1000);
    updateCountdown();
  </script>
</body>
</html>
