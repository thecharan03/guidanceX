        <a href="/topics"><button class="project-action">Start Learning</button></a>
      </div>
    </div>
    <!-- YOUR COURSES GRID, linked correctly -->
    <div class="courses-title">GUIDANCEX COURSES</div>
    <div class="courses-grid">
      <% 
        const iconMap = {
          business: "bi-building",
          trading: "bi-currency-exchange",
          design: "bi-brush",
          freelancer: "bi-person-workspace",
          Film making: "bi-magic"
        };
