    .projects-title{font-family:'Orbitron',Arial,sans-serif;font-size:1.18rem;color:#7157d3;font-weight:800;letter-spacing:0.11em;margin:34px 0 18px 0;text-align:center;}
    .projects-grid {
      display: grid; grid-template-columns: repeat(auto-fit, minmax(210px, 1fr)); gap: 28px; max-width: 980px; margin:0 auto 32px auto; width:94vw;
    }
    .project-card {
      background: #b8a0f9;
      border-radius: 17px;
      box-shadow: 0 6px 20px #7e72e644;
      padding: 0;
      flex-direction: column; align-items: center; cursor:pointer; transition: all .15s; overflow:hidden;
    }
    .project-thumb { width: 100%; height: 132px; object-fit:cover; border-radius: 17px 17px 0 0;}
    .project-title { font-size: 1.08rem; font-weight: 700; color: #7157d3; margin: 14px 0 5px 0; text-align:center;}
    .project-desc { font-size: 0.99rem; color: #504091; text-align:center; margin-bottom:12px; padding:0 12px;}
    .project-action { background: linear-gradient(140deg, #7e72e6, #c7bafd 70%); border:none;border-radius:14px;font-weight:700;font-size:1.07rem;padding:11px 22px;box-shadow:0 2px 12px #c7bafd44;color:#504091;width:85%;max-width:150px;cursor:pointer;margin:0 auto 14px auto;transition:background .18s;color .18s;}
    .project-action:hover {background: linear-gradient(90deg,#7157d3 0%, #c7bafd 100%); color:#fff;}
    /* COURSES GRID BELOW as requested */
    .courses-title{font-family:'Orbitron',Arial,sans-serif;font-size:1.24rem;color:#c7bafd;font-weight:800;letter-spacing:0.105em;margin:28px 0 14px 0;text-align:center;}
    .courses-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(210px, 1fr)); gap: 28px; max-width: 980px;margin:0 auto 55px auto;width:94vw;}
    .course-card { background: linear-gradient(120deg,#ece5fa 85%,#7157d3 100%); border-radius:17px;padding:22px 15px;text-align:center; color:#504091; box-shadow:0 6px 16px #7157d344;font-weight:700;font-size:1.11rem;display:flex;flex-direction:column;align-items:center;}
    .course-name { font-size:1.09rem;font-family:'Orbitron',Arial,sans-serif;font-weight:800;color:#7157d3;margin-bottom:11px;}
