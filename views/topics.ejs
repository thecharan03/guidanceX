    .gallery-row {
      display: flex;
      gap: 30px;
      justify-content: center;
      margin: 22px 0 45px 0;
      flex-wrap: wrap;
    }
    .gallery-card {
      background: #d6cafd;
      border-radius: 19px;
      box-shadow: 0 6px 24px #8262e166;
      padding: 13px;
      width: 198px;
      text-align: center;
      margin: 0;
      display: flex; flex-direction: column; align-items: center;
    }
    .gallery-img {
      width: 168px; max-width: 100%; height: 168px;
      border-radius: 16px;
      object-fit: cover;
      background: #8362d6;
      margin-bottom: 10px;
      box-shadow: 0 4px 18px #6344b088;
    }
    .gallery-label {
      color: #50388b;
      font-size: 1.07rem;
      font-weight: 600;
      margin: 0 0 7px 0;
      text-align: center;
      letter-spacing: 0.08em;
    }
    .projects-title {
      font-family: 'Orbitron', Arial, sans-serif;
      font-size: 1.45rem;
      color: #8362d6;
      font-weight: 800;
      letter-spacing: 0.11em;
      margin: 45px 0 21px 0;
      text-align: center;
    }
    /* Courses grid */
    .courses-title {
      font-family: 'Orbitron', Arial, sans-serif;
      font-size: 1.39rem;
      color: #8362d6;
      font-weight: 800;
      letter-spacing: 0.105em;
      margin: 46px 0 14px 0;
      text-align: center;
    }
    .courses-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 33px;
      max-width: 1050px;
      margin: 0 auto 55px auto;
      width: 93vw;
      align-items: stretch;
    }
    .course-card {
