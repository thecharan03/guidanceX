    .course-btn { background:#7157d3; color:#fff;font-weight:700;padding:8px 22px;border-radius:13px;border:none;font-size:1rem;letter-spacing:.07em;cursor:pointer;box-shadow:0 2px 10px #7157d344;}
    .course-btn:hover { background:#504091; color:#fff;}
    @media (max-width:820px){nav{padding:0 12px;}main{padding:0;}.exploit-row{gap:16px}.gallery-row{gap:16px;}.projects-grid,.courses-grid{gap:16px;} }
