<!DOCTYPE html>
<html lang="en">
<head>
  <title>Courses | GuidanceX</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet" />

  <link rel="stylesheet" href="/style.css" />
  <style>
    html, body {
      margin: 0; padding: 0; min-height: 100vh; width: 100vw;
      font-family: 'Montserrat', Arial, sans-serif;
      background: linear-gradient(120deg,#191d24,#1e2236);
      color: #f1f1f1;
      display: flex; flex-direction: column; align-items: center;
    }
    nav {
      position: fixed; top: 0; left: 0; right: 0; z-index: 1000;
      background: rgba(22,25,33,0.9);
      backdrop-filter: saturate(180%) blur(15px);
       box-shadow: 0 0 2px #111;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 42px;
      height: 74px;
      border-bottom: 1.4px solid #3f4f7825;
    }
    .nav-logo {
      display: flex; align-items: center; gap: 14px;
      font-weight: 600; font-size: 1.35rem;
      color: #efefee;
    }
    .nav-logo svg {
      width: 44px; height: 44px; border-radius: 14px;
       box-shadow: 0 0 2px #111;
    }
    .nav-links {
      display: flex; gap: 28px;
    }
    .nav-links a {
      color: #aab4cc;
      font-size: 1rem;
      font-weight: 500;
      text-decoration: none;
      padding: 6px 16px;
      border-radius: 16px;
      transition: color 0.18s, background 0.18s;
    }
    .nav-links a:hover {
      background: #074e81;
      color: #00b1ff;
      text-shadow: 0 0 12px #00bfff;
    }
    .nav-actions button {
      background: linear-gradient(20deg, #00b1ff, #006cbf);
      border: none;
      border-radius: 16px;
      font-weight: 600;
      font-size: 1.02rem;
      padding: 10px 28px;
      color: #fff;
        box-shadow: 0 0 2px #111;
      cursor: pointer;
      transition: background 0.22s ease;
      margin-left: 16px;
    }
    .nav-actions button:hover {
      background: linear-gradient(90deg, #0079ca, #004d82);
       box-shadow: 0 5px 14px #0079ca66;
    }
    main {
      margin-top: 94px;
      padding: 0 2rem 44px 2rem;
      max-width: 1240px;
      width: 100%;
      box-sizing: border-box;
    }
    h1 {
      font-weight: 800;
      font-size: 3.2rem;
      text-align: center;
      margin-bottom: 48px;
      color: #00aaffee;
      text-shadow: 0 0 15px #00456eaa;
      user-select: none;
    }
    .courses-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 38px 36px;
    }
    .course-card {
      background: #232f41bb;
      border-radius: 28px;
     
      box-shadow: 0 0 3px #206ea766, 0 0 6px #00baff33; 
      padding: 34px 28px 40px 28px;
      display: flex;
      flex-direction: column;
      align-items: center;
      cursor: pointer;
      transition: all 0.22s ease;
      user-select: none;
    }
    .course-card:hover {
      box-shadow: 0 0 9px #00aaff77, 0 4px 12px #008fcc88;
      background: #112230cc;
      transform: scale(1.04);
    }
    .course-icon {
      font-size: 4.8rem;
      color: #00aaffcc;
      margin-bottom: 24px;
      text-shadow: 0 0 16px #003f5fbb;
      user-select: none;
    }
    .course-name {
      font-size: 1.28rem;
      font-weight: 700;
      color: #00baff;
      margin-bottom: 16px;
      letter-spacing: 0.02em;
      text-align: center;
    }
    .course-button {
      background: linear-gradient(140deg, #2e6bff, #57a8ff 66%);
      border: none;
      border-radius: 18px;
      font-weight: 700;
      font-size: 1.12rem;
      padding: 14px 28px;
      box-shadow: 0 4px 12px #2066fe88;
      color: #e0f3ff;
      width: 100%;
      max-width: 210px;
      cursor: pointer;
      transition: background 0.22s ease;
    }
    .course-button:hover {
      background: linear-gradient(90deg, #005e9e 0%, #00b1ff 100%);
      box-shadow: 0 5px 22px #1b66fe88;
    }
    @media (max-width: 720px) {
      .courses-grid {
        grid-template-columns: repeat(auto-fit,minmax(180px,1fr));
      }
      .course-card { padding: 26px 18px 30px 18px; }
      .course-name { font-size: 1.12rem; }
      .course-button { font-size: 1rem; padding: 12px 16px; max-width: 170px; }
    }
  </style>
</head>
<body>
  <nav>
    <div class="nav-logo" aria-label="GuidanceX company logo">
      <svg viewBox="0 0 55 39" aria-hidden="true" role="img" focusable="false" tabindex="-1">
        <rect x="12" y="8" width="28" height="8" rx="3.2" fill="#ff7700" stroke="#fff" stroke-width="2"/>
        <rect x="16.5" y="16" width="19" height="9" rx="3.2" fill="#232326" stroke="#ff7700" stroke-width="1.5"/>
        <polygon points="20,25 30,32 26,34 36,37 28,27" fill="#fff" stroke="#ff7700" stroke-width="1"/>
        <circle cx="28" cy="12" r="3.2" fill="#fff" stroke="#ff7700" stroke-width="2"/>
      </svg>
      GuidanceX
    </div>
    <div class="nav-links" role="navigation">
      <a href="/" class="nav-link">Home</a>
      <a href="/topics" class="nav-link">Courses</a>
      <a href="/pricing" class="nav-link">Pricing</a>
      <a href="/about" class="nav-link">About</a>
      <a href="/help" class="nav-link">Help</a>
      

    </div>
    <div class="nav-actions">
      <a href="/login"><button class="nav-btn secondary">Log In</button></a>
      <a href="/topics"><button class="nav-btn">Get Started</button></a>
      


    </div>
  </nav>
  <main>
    <h1>Explore Our Courses</h1>
    <section class="courses-grid">
      <% 
        const iconMap = {
          business: "bi-building",
          trading: "bi-currency-exchange",
          design: "bi-brush",
          freelancer: "bi-person-workspace",
          personalgrowth: "bi-magic"
        };
      %>

      <% topics.forEach(topic => { %>
        <article class="course-card" onclick="window.location='/topic/<%= topic.name %>'" tabindex="0" role="button">
          <i class="course-icon bi <%= iconMap[topic.name.toLowerCase().replace(/\s+/g,'')] || 'bi-code-slash' %>" aria-hidden="true"></i>
          <h3 class="course-name"><%= topic.name %></h3>
          <button class="course-button" aria-label="View <%= topic.name %> courses">View Tracks</button>
        </article>
      <% }) %>
    </section>
  </main>

  <!-- Bootstrap Icons CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.js"></script>
</body>
</html>
