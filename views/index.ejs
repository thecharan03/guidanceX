        <polygon points="20,25 30,32 26,34 36,37 28,27" fill="#fff" stroke="#ff7700" stroke-width="1"/>
        <circle cx="28" cy="12" r="3.2" fill="#fff" stroke="#ff7700" stroke-width="2"/>
